{
	"name": "@ctx-core/rollup",
	"version": "13.1.19",
	"description": "ctx-core rollup",
	"keywords": [
		"ctx-core",
		"rollup"
	],
	"homepage": "https://github.com/ctx-core/rollup#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/rollup/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/rollup.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"import": "./lib/index.js"
		},
		"./package.json": "./package.json"
	},
	"bin": {
		"rollup-cmd": "./bin/rollup-cmd.mjs",
		"script-ts": "./bin/script-ts.mjs"
	},
	"scripts": {
		"build": "npm run compile",
		"clean": "rimraf lib && npm run clean:tsbuildinfo",
		"clean:tsbuildinfo": "rm -f tsconfig.tsbuildinfo && rm -f lib/**/*.d.ts",
		"compile": "npm run compile:source && npm run compile:declaration",
		"compile:source": "swc src --out-dir lib --copy-files --source-maps --config-file .swcrc",
		"compile:declaration": "npm run clean:tsbuildinfo && tsc --declaration --emitDeclarationOnly --declarationDir lib",
		"exec": "$@",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@ctx-core/array": "workspace:^23.1.0",
		"@ctx-core/cli-args": "workspace:^11.0.19",
		"@ctx-core/pipe": "workspace:^6.0.33",
		"@ctx-core/queue": "workspace:^6.1.16",
		"chokidar": "^3.5.2",
		"fs-extra": "^10.0.0",
		"globby": "^12.0.2",
		"minimist": "^1.2.5",
		"nodemon": "^2.0.15"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.55",
		"@swc/core": "^1.2.124",
		"@types/fs-extra": "^9.0.13",
		"rimraf": "^3.0.2",
		"typescript": "next"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"svelte": "./lib/index.js"
}